<%- include('patials/header')  %> 
<%- include('patials/navbar')  %> 
<div class="new-book-body"></div>
    <div class="new-book-container">
        <h1>Add new Comic</h1>
        <p>Have your book displayed with our wide variaty of books</p>
        <form method="POST" name="form" action="/comics" data-netlify="True" data-netlify-recaptcha="true">
            <div class="new-book-row">
                <div class="column">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" placeholder="Enter book's title">
                </div>
                <div class="column">
                    <label for="author">Author</label>
                    <input type="text" name="author" id="author" placeholder="Author">
                </div>
                    <div class="column">
                        <label for="Image-link">Book's cover Link</label>
                        <input type="text" name="cover" id="Image-link" placeholder="Insert book's cover">
                    </div>
                    <div class="column">
                        <label for="publisher">Publisher</label>
                        <input type="text" name="publisher" id="publisher" placeholder="Book's publisher...">
                    </div>
                    <div class="column">
                        <label for="date">Date</label>
                        <input type="date" name="date" id="date" placeholder="The date that the book what published">
                    </div>
                    <div class="column">
                        <label for="series">Series</label>
                        <input type="text" name="series" id="series" placeholder="Series">
                    </div>
                    <div class="column">
                        <label for="issue">Issue</label>
                        <input type="number" name="issue" id="issue" placeholder="issue">
                    </div>
                    <div class="column">
                        <label for="genre">Genre</label>
                        <select name="genre" id="genre" class="genre-list">
                            <option disabled selected>-- Choose Below --</option>
                            <option value="Superhero">Superhero</option>
                            <option value="Manga">Manga</option>
                            <option value="Slice-of-Life">Slice-of-Life</option>
                            <option value="Humor">Humor</option>
                            <option value="Sci-fi">Sci-fi</option>
                            <option value="Fantasy">Fantasy</option>
                            <option value="Horror">Horror</option>
                            <option value="Action">Action</option>
                            <option value="Nonfiction">Nonfiction</option>
                        </select>
                    </div>
                    <div class="column">
                        <!-- When using checkbox the label should come after the input -->
                        <input type="checkbox" name="color" id="color" >
                        <label for="color">Color?</label>
                    </div>
            </div>
                <div class="column">
                    <label for="review">Review</label>
                    <textarea name="review" placeholder="Share your review of this book" id="review"  rows="3"></textarea>
                </div>
            <button type="submit">Submit</button>
        </form>
    </div>
</div>
<%- include('patials/footer')  %> 