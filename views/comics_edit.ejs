<%- include('patials/header')  %> 
<%- include('patials/navbar')  %> 
<div class="new-book-body"></div>
    <div class="new-book-container">
        <h1>edit the existing comic</h1>
        <p>you can make changes to this comic any time you want</p>
        <form method="POST" name="form" action="/comics/<%=comic._id%>?_method=PUT" data-netlify="True" data-netlify-recaptcha="true">
            <div class="new-book-row">
                <div class="column">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" placeholder="Enter book's title" value="<%= comic.title  %> ">
                </div>
                <div class="column">
                    <label for="author">Author</label>
                    <input type="text" name="author" id="author" placeholder="Author" value="<%= comic.author  %> " >
                </div>
                    <div class="column">
                        <label for="Image-link">Book's cover Link</label>
                        <input type="text" name="cover" id="Image-link" placeholder="Insert book's cover" value="<%= comic.cover  %> ">
                    </div>
                    <div class="column">
                        <label for="Publisher">Publisher</label>
                        <input type="text" name="Publisher" id="Publisher" placeholder="Book's publisher..." value="<%= comic.publisher  %> "> 
                    </div>
                    <div class="column">
                        <!-- Fix the date to show // use moment.js -->
                        <label for="date">Date</label>
                        <input type="date" name="date" id="date" placeholder="The date that the book what published" value="">
                    </div>
                    <div class="column">
                        <label for="series">Series</label>
                        <input type="text" name="series" id="series" placeholder="Series" value="<%= comic.series  %> ">
                    </div>
                    <div class="column">
                        <label for="issue">Issue</label>
                        <input type="number" name="issue" id="issue" placeholder="issue" value="<%= comic.issue  %>">
                    </div>
                    <div class="column">
                        <label for="genre">Genre</label>
                        <select name="genre" id="genre" class="genre-list" value="<%= comic.genre  %>" >
                            <option disabled >-- Choose Below --</option>
                            <option value="superhero" <%= comic.genre === 'superhero' ? 'selected' : ''  %> >Superhero</option>
                            <option value="manga"  <%= comic.genre === 'manga' ? 'selected' : ''  %>>Manga</option>
                            <option value="slice-of-Life" <%= comic.genre === 'slice-of-Life' ? 'selected' : ''  %>>Slice-of-Life</option>
                            <option value="humor" <%= comic.genre === 'humor' ? 'selected' : ''  %>>Humor</option>
                            <option value="sci-fi" <%= comic.genre === 'sci-fi' ? 'selected' : ''  %>>Sci-fi</option>
                            <option value="fantasy" <%= comic.genre === 'fantasy' ? 'selected' : ''  %>>Fantasy</option>
                            <option value="horror"  <%= comic.genre === 'horror' ? 'selected' : ''  %>>Horror</option>
                            <option value="action" <%= comic.genre === 'action' ? 'selected' : ''  %>>Action</option>
                            <option value="nonfiction" <%= comic.genre === 'nonfiction' ? 'selected' : ''  %>>Nonfiction</option>
                        </select>
                    </div>
                    <div class="column">
                        <!-- When using checkbox the label should come after the input -->
                        <input type="checkbox" name="color" id="color" <%= comic.color ? 'checked' : 'z' %> >
                        <label for="color">Color?</label>
                    </div>
            </div>
                <div class="column">
                    <label for="review">Review</label>
                    <textarea name="review" placeholder="Share your review of this book" id="review"  rows="3"><%=comic.review  %></textarea>
                </div>
            <button type="submit">Submit</button>
        </form>
    </div>
</div>
<%- include('patials/footer')  %> 